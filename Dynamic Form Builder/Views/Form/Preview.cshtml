@model Dynamic_Form_Builder.Models.Form

@{
    ViewData["Title"] = "Preview Form";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Preview: @Model.Title</h4>
            <a asp-action="Edit" asp-route-id="@Model.FormId" class="btn btn-warning btn-sm">Edit</a>
        </div>
        <div class="card-body">
            @if (Model.Fields == null || !Model.Fields.Any())
            {
                <p class="text-muted">No dropdown fields available.</p>
            }
            else
            {
                @for (int i = 0; i < Model.Fields.Count; i++)
                {
                    var field = Model.Fields[i];
                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            @field.Label
                            @if (field.IsRequired)
                            {
                                <span class="text-danger">*</span>
                            }
                        </label>
                        <select class="form-select" disabled>
                            <option selected>@field.SelectedOption</option>
                        </select>
                    </div>
                }
            }
        </div>
    </div>
</div>
